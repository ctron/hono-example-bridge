<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camelContext id="HonoKafkaBridge"
        xmlns="http://camel.apache.org/schema/spring">

        <dataFormats>
            <json id="map" library="Jackson" unmarshalTypeName="java.util.Map" />
        </dataFormats>

        <route id="switch">
            <from uri="amqp:telemetry/{{iot.tenant}}" />

            <log message="FP: ${headers[function_port]}"/>

            <choice>
                <when>
                    <simple>${header[function_port]} == 1</simple>
                    <to uri="direct:store"/>
                </when>
                <when>
                    <simple>${header[function_port]} == 9</simple>
                    <to uri="seda:time-request"/>
                </when>
                <otherwise>
                    <log message="Headers: ${headers}"/>
                    <log message="Body: ${body}"/>
                </otherwise>
            </choice>


        </route>

        <route id="store">
            <from uri="direct:store"/>

            <setHeader id="setKafkaKey" headerName="kafka.KEY">
                <simple>${header[device_id]}</simple>
            </setHeader>
            <setHeader id="setDeviceAlias" headerName="deviceAlias">
                <simple>${header[deviceAlias]}</simple>
            </setHeader>

            <to uri="kafka:{{kafka.topic}}?brokers={{kafka.brokers}}" />
        </route>

        <route id="time-request">
            <from uri="seda:time-request"/>

            <log message="Time request: ${headers}\n${body}"/>

            <removeHeaders pattern="*" excludePattern="device_id|function_port"/>

            <setBody><constant>0000</constant></setBody>
            <setHeader headerName="function_port"><constant>9</constant></setHeader>
            <!-- <setHeader headerName="CamelJmsDestinationName"><simple>command/{{iot.tenant}}/${header[device_id]}</simple></setHeader> -->
            <setHeader headerName="JMSDeliveryMode"><constant>NON_PERSISTENT</constant></setHeader>

            <log message="Time response: ${headers}\n${body}"/>

            <to uri="amqp:command/{{iot.tenant}}?allowAdditionalHeaders=function_port&amp;preserveMessageQos=true&amp;timeToLive=5000" />
        </route>

    </camelContext>

</beans>
