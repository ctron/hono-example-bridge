<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camelContext id="HonoKafkaBridge"
        xmlns="http://camel.apache.org/schema/spring">

        <dataFormats>
            <json id="map" library="Jackson" unmarshalTypeName="java.util.Map" />
        </dataFormats>

        <route id="switch">
            <from uri="amqp:telemetry/{{iot.tenant}}" />

            <log message="FP: ${headers[function_port]}"/>

            <choice>
                <when>
                    <simple>${header[function_port]} == 1</simple>
                    <to uri="direct:store"/>
                </when>
                <when>
                    <simple>${header[function_port]} == 9</simple>
                    <log message="Time request: ${headers}\n${body}"/>
                </when>
                <otherwise>
                    <log message="${headers}\n${body}"/>
                </otherwise>
            </choice>


        </route>

        <route id="store">
            <from uri="direct:store"/>

            <setHeader id="setKafkaKey" headerName="kafka.KEY">
                <simple>${header[device_id]}</simple>
            </setHeader>
            <setHeader id="setDeviceAlias" headerName="deviceAlias">
                <simple>${header[deviceAlias]}</simple>
            </setHeader>

            <to uri="kafka:{{kafka.topic}}?brokers={{kafka.brokers}}" />
        </route>

    </camelContext>

</beans>
